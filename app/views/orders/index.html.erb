<h1>Listing orders</h1>

<table>
  <tr>
    <th>Buyer</th>
    <th>Total</th>
    <th>Active</th>
    <th>Last edited</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.buyer_id %></td>
    <td><%= order.total %></td>
    <td><%= order.active %></td>
    <td><%= order.updated_at.to_s(:short)%>, <%= time_ago_in_words(order.updated_at)%> ago</td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

